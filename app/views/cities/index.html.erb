<div class="container">
  <h1 class="text-center">Cities</h1>
  <section class="row text-center cities-controls">
    <a href="<%= new_city_path %>" class="btn btn-default">New City</a>
  </section>
  <% @cities.each do |c| %>
  <article class="row">
    <ul>
      <li class="col-md-2"><strong><%=c.name %></strong></li>
      <li class="col-md-2"><strong><%=c.country_name %></strong>></li>
      <li class="col-md-2"><strong><%=c.time_zone %></strong>></li>
      <li class="col-md-2"><a href="<%= city_path(c.id)%>"data-method="delete" class="btn btn-danger"> Delete</a></li>
      <li class="col-md-2"><a href="<%= edit_city_path(c.id)%>"data-method="edit" class="btn btn-edit"> Edit</a></li>
    </ul>

  </article>
  <% end if @cities.any? %>
</div>
